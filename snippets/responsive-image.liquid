
<picture class="banner__picture">
  <source
    srcset="
      {{ image | image_url: width: 375 }}&quality={{ hi_res_quality }} 375w,
      {{ image | image_url: width: 550 }}&quality={{ hi_res_quality }} 550w,
      {{ image | image_url: width: 750 }}&quality={{ hi_res_quality }} 750w,
      {{ image | image_url: width: 1100 }}&quality={{ hi_res_quality }} 1100w,
      {{ image | image_url: width: 1500 }}&quality={{ hi_res_quality }} 1500w,
      {{ image | image_url: width: 1780 }}&quality={{ hi_res_quality }} 1780w,
      {{ image | image_url: width: 2000 }}&quality={{ hi_res_quality }} 2000w,
      {{ image | image_url: width: 3000 }}&quality={{ hi_res_quality }} 3000w,
      {{ image | image_url: width: 3840 }}&quality={{ hi_res_quality }}
    "
    sizes="{{sizes}}"
    media="(min-resolution: 2dppx)"
    width="{{ image.width }}"
    height="{{ image_height }}"
  />
  {{
    image
    | image_url: width: 3840
    | image_tag:
      loading: 'lazy',
      width: image.width,
      height: image_height,
      class: image_class,
      sizes: sizes,
      widths: widths
  }}
</picture>

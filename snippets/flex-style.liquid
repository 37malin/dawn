{%- liquid
  assign horizontal_alignment = settings.horizontal_alignment
  assign vertical_alignment = settings.vertical_alignment

  if settings.content_direction == 'column'
    assign horizontal_alignment = settings.horizontal_alignment_flex_direction_column
    assign vertical_alignment = settings.vertical_alignment_flex_direction_column
  endif

  if settings.flex_wrap
    assign flex_wrap = 'wrap'
  else
    assign flex_wrap = 'nowrap'
  endif

  if settings.flex_wrap_mobile
    assign flex_wrap_mobile = 'wrap'
  else
    assign flex_wrap_mobile = 'nowrap'
  endif

  if settings.gap < 12
    assign gap_mobile = settings.gap
  else
    assign gap_mobile = settings.gap | divided_by: 2
  endif
-%}

--flex-direction: {{ settings.content_direction }}; --flex-direction-mobile: {{ settings.content_direction_mobile }};
--horizontal-alignment: {{ horizontal_alignment }}; --vertical-alignment: {{ vertical_alignment }}; --gap:
{{ settings.gap }}px; --gap-mobile: {{ gap_mobile }}px; --flex-wrap: {{ flex_wrap }}; --flex-wrap-mobile:
{{ flex_wrap_mobile }};

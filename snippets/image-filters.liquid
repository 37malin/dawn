{%- if settings.image_filter_type == 'duotone' or 'duotone2' -%}
    <svg class="image-filter--svg">
        <filter id="image-filter--duotone">
            <feColorMatrix type="matrix" values=".33 .33 .33 0 0
                  .33 .33 .33 0 0
                  .33 .33 .33 0 0
                  0 0 0 1 0">
            </feColorMatrix>

            {%- if settings.image_filter_type == 'duotone2' -%}
            <feComponentTransfer color-interpolation-filters="sRGB">
                <feFuncR type="table" tableValues="{{ settings.colors_accent_2.red | divided_by: 255.0 }} {{ settings.colors_accent_1.red | divided_by: 255.0 }}"></feFuncR>
                <feFuncG type="table" tableValues="{{ settings.colors_accent_2.green | divided_by: 255.0 }} {{ settings.colors_accent_1.green | divided_by: 255.0 }}"></feFuncG>
                <feFuncB type="table" tableValues="{{ settings.colors_accent_2.blue | divided_by: 255.0 }} {{ settings.colors_accent_1.blue | divided_by: 255.0 }}"></feFuncB>
            </feComponentTransfer>
            {%- else -%}
            <feComponentTransfer color-interpolation-filters="sRGB">
                <feFuncR type="table" tableValues="{{ settings.colors_accent_1.red | divided_by: 255.0 }} {{ settings.colors_accent_2.red | divided_by: 255.0 }}"></feFuncR>
                <feFuncG type="table" tableValues="{{ settings.colors_accent_1.green | divided_by: 255.0 }} {{ settings.colors_accent_2.green | divided_by: 255.0 }}"></feFuncG>
                <feFuncB type="table" tableValues="{{ settings.colors_accent_1.blue | divided_by: 255.0 }} {{ settings.colors_accent_2.blue | divided_by: 255.0 }}"></feFuncB>
            </feComponentTransfer>
            {%- endif -%}
        </filter>
  </svg>
  {%- endif -%}

  {%- if settings.image_filter_type == 'pixelated' -%}
    <svg class="image-filter--svg">
      <filter id="image-filter--pixelate" x="0" y="0">
        <feFlood x="4" y="4" height="2" width="2"/>
        <feComposite width="10" height="10"/>
        <feTile result="a"/>
        <feComposite in="SourceGraphic" in2="a" operator="in"/>
        <feMorphology operator="dilate" radius="5"/>
      </filter>
    </svg>
  {%- endif -%}
